   url = {https://onlinelibrary.wiley.com/doi/full/10.1029/2006GL028342 https://onlinelibrary.wiley.com/doi/abs/10.1029/2006GL028342 https://agupubs.onlinelibrary.wiley.com/doi/10.1029/2006GL028342},

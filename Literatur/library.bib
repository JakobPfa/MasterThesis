   keywords = {Glaciological instruments and methods,ice temperature,ice thickness measurements,sea ice,sea-ice growth and decay},
   pages = {1-20},
   publisher = {Cambridge University Press},
   title = {Accuracy and precision when deriving sea-ice thickness from thermistor strings: a comparison of methods},
   url = {https://www.cambridge.org/core/journals/journal-of-glaciology/article/accuracy-and-precision-when-deriving-seaice-thickness-from-thermistor-strings-a-comparison-of-methods/D36DE14E52ABFC72D42BFF05D531208F},
